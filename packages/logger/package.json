{
  "name": "@punicore/logger",
  "version": "1.2.4",
  "description": "糯芯核心 • 日志模块",
  "keywords": [
    "node",
    "nodejs",
    "bot",
    "logger",
    "puni"
  ],
  "bugs": {
    "url": "https://github.com/PuniCore/logger/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PuniCore/logger.git"
  },
  "license": "GNU AGPL-3.0",
  "author": "PuniCore",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./chalk": {
      "import": "./dist/chalk.mjs",
      "require": "./dist/chalk.cjs",
      "types": "./dist/chalk.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && tsdown",
    "dev": "tsx src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sort": "sort-package-json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "log4js": "npm:@candriajs/log4js@^1.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "tsc-alias": "^1.8.16",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20.0.0"
  }
}
